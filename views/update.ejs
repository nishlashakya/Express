<!DOCTYPE html>
<html>
	<head>
		<title>My book shelf</title>
		<link rel='stylesheet' href='/stylesheets/style.css' />
		<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
	</head>
	<body>
		<h1>Update</h1>
		<hr>

		<!-- <form method="post"> -->
		<form method="post" action="/books/update">
			<div class="form-group row">
				<div class="col-10">
					<input class="form-control" type="hidden" name="_id" value="<%= books._id %>" id="id-input">
				</div>
			</div>
			<div class="form-group row">
	  			<label for="title-input" class="col-2 col-form-label">Title</label>
				<div class="col-10">
					<input class="form-control" type="text" name="title" value="<%= books.title %>" id="title-input">
				</div>
			</div>
			<div class="form-group row">
	  			<label for="author-input" class="col-2 col-form-label">Author</label>
				<div class="col-10">
					<input class="form-control" type="text" name="author" value="<%= books.author %>" id="author-input">
				</div>
			</div>
			<div class="form-group row">
	  			<label for="genre-input" class="col-2 col-form-label">Genre</label>
				<div class="col-10">
					<input class="form-control" type="text" name="genre" value="<%= books.genre %>" id="genre-input">
				</div>
			</div>
			<div class="form-group row">
	  			<label for="description-input" class="col-2 col-form-label">Description</label>
				<div class="col-10">
					<input class="form-control" type="text" name="description" value="<%= books.description %>" id="description-input">
				</div>
			</div>

			<div class="form-group row">
				<label for="date-input" class="col-2 col-form-label">Date</label>
				<div class="col-10">
					<input class="form-control" name="create_date" value="<%= books.create_date %>" id="date-input">
				</div>
			</div>
			<button type="submit" class="btn btn-primary btn-lg" name="action">Update Book</button>
		</form>
	</body>
</html>
